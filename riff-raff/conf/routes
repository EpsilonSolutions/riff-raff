# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /deployinfo                 controllers.Application.deployInfo(stage="")
GET     /deployinfo/:stage          controllers.Application.deployInfo(stage)

# Deployment pages
GET     /deployment/CODE/frontend-article   controllers.Deployment.frontendArticleCode
GET     /deployment/log/:uuid  controllers.Deployment.deployLog(uuid:String, verbose:Boolean=false)
GET     /deployment/log/update/:uuid  controllers.Deployment.deployLogContent(uuid:String)
GET     /deployment/request controllers.Deployment.deploy
POST    /deployment/request controllers.Deployment.processForm
GET     /deployment/preview/:uuid controllers.Deployment.previewLog(uuid:String, verbose:Boolean=false)
GET     /deployment/preview/update/:uuid controllers.Deployment.previewContent(uuid:String)

GET     /deployment/history controllers.Deployment.history()

GET     /deployment/view/:uuid  controllers.Deployment.viewUUID(uuid:String)

# authentication endpoints
GET     /profile                    controllers.Login.profile
GET     /login                      controllers.Login.login
POST    /login                      controllers.Login.loginPost
GET     /openIDCallback             controllers.Login.openIDCallback
GET     /logout                     controllers.Login.logout

# Testing pages (for changing styling without running deploys)
GET     /deployment/reportTestPartial  controllers.Testing.reportTestPartial(verbose:Boolean=false)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
