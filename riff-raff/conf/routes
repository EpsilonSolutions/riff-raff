# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /deployinfo                 controllers.Application.deployInfo(stage="")
GET     /deployinfo/:stage          controllers.Application.deployInfo(stage)
GET     /deployment/CODE/frontend-article   controllers.Application.frontendArticleCode
POST    /deployment/CODE/frontend-article   controllers.Application.deployFrontendArticleCode
GET     /deployment/log   controllers.Application.deployLog(updateActorPath:String)
GET     /deployment/request controllers.Application.deploy
POST    /deployment/request controllers.Application.doDeploy

GET     /profile                    controllers.Application.profile
GET     /login                      controllers.Login.login
POST    /login                      controllers.Login.loginPost
GET     /openIDCallback             controllers.Login.openIDCallback
GET     /logout                     controllers.Login.logout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
