#!/bin/bash
# This file is an example of how our host management system returns hostlists
# Each host has a group, a stage, an role and a hostname.
# The stage indicates the stage of servers, i.e. PROD, CODE, TEST, QA etc.
# the role indicates the role name that can be deployed to it
# the hostname should be obvious

cat <<EOF
{"hosts":[
{"group":"a", "stage":"CODE", "role":"microapp-cache", "hostname":"machost01.dc-code.gnl"},
{"group":"b", "stage":"CODE", "role":"microapp-cache", "hostname":"machost51.dc-code.gnl"},
{"group":"a", "stage":"QA", "role":"microapp-cache", "hostname":"machost01.dc-qa.gnl"},
{"group":"dc1", "stage":"PROD", "role":"microapp-cache", "hostname":"machost01.dc-1.gnl"},
{"group":"dc2", "stage":"PROD", "role":"microapp-cache", "hostname":"machost51.dc-2.gnl"},
{"group":"a", "stage":"CODE", "role":"related-information", "hostname":"genhost01.dc-code.gnl"},
{"group":"a", "stage":"CODE", "role":"sportsapp", "hostname":"genhost01.dc-code.gnl"},
{"group":"a", "stage":"PROD", "role":"related-information", "hostname":"genhost01.dc-1.gnl"}
]}
EOF
